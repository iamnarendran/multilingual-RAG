# =============================================================================
# MULTILINGUAL RAG SYSTEM - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to git!

# =============================================================================
# OPENROUTER API (LLM Gateway)
# =============================================================================
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxx
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# =============================================================================
# LLM MODEL SELECTION (Change anytime - no code changes needed!)
# =============================================================================
# Router Agent - Fast classification (FREE model recommended)
MODEL_ROUTER=google/gemini-2.0-flash-exp:free

# Query Planner - Generate search queries (FREE model recommended)
MODEL_PLANNER=google/gemini-2.0-flash-exp:free

# Analysis Agent - Deep reasoning (Premium model recommended)
MODEL_ANALYZER=anthropic/claude-3.5-sonnet

# Synthesis Agent - Combine information (Premium model recommended)
MODEL_SYNTHESIZER=anthropic/claude-3.5-sonnet

# Validator Agent - Fact checking (Fast model recommended)
MODEL_VALIDATOR=google/gemini-flash-1.5

# Model Temperatures (0.0 = deterministic, 1.0 = creative)
TEMP_ROUTER=0.1
TEMP_PLANNER=0.7
TEMP_ANALYZER=0.3
TEMP_SYNTHESIZER=0.2
TEMP_VALIDATOR=0.1

# =============================================================================
# QDRANT CLOUD (Vector Database)
# =============================================================================
# Sign up at: https://cloud.qdrant.io (Free 1GB tier)
# Format: https://xxxxx-xxxxx-xxxxx.cloud.qdrant.io:6333
QDRANT_URL=https://your-cluster-id.cloud.qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION_NAME=multilingual_docs

# =============================================================================
# SUPABASE POSTGRESQL (Relational Database)
# =============================================================================
# Sign up at: https://supabase.com (Free 500MB tier)
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:your-password@db.xxxxx.supabase.co:5432/postgres

# =============================================================================
# UPSTASH REDIS (Cache - Optional)
# =============================================================================
# Sign up at: https://upstash.com (Free tier available)
# Leave empty to disable caching
REDIS_URL=redis://default:your-password@xxxxx.upstash.io:6379

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================
# Model: intfloat/multilingual-e5-large (supports 100+ languages)
EMBEDDING_MODEL=intfloat/multilingual-e5-large
EMBEDDING_DIMENSION=1024
EMBEDDING_BATCH_SIZE=32
EMBEDDING_DEVICE=cpu

# =============================================================================
# DOCUMENT PROCESSING
# =============================================================================
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,docx,txt,csv,md
CHUNK_SIZE=512
CHUNK_OVERLAP=128

# =============================================================================
# RETRIEVAL SETTINGS
# =============================================================================
TOP_K_RETRIEVAL=25
TOP_K_RERANK=5
MIN_SIMILARITY_SCORE=0.7

# =============================================================================
# SECURITY
# =============================================================================
# Generate a secure secret key: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Multilingual RAG System
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO
ENVIRONMENT=development

# API Settings
API_V1_PREFIX=/api/v1
RATE_LIMIT_PER_MINUTE=60

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# SUPPORTED LANGUAGES (22 Indian Languages + English)
# =============================================================================
# en: English, hi: Hindi, bn: Bengali, te: Telugu, mr: Marathi
# ta: Tamil, ur: Urdu, gu: Gujarati, kn: Kannada, ml: Malayalam
# or: Odia, pa: Punjabi, as: Assamese, mai: Maithili, sa: Sanskrit
# ks: Kashmiri, ne: Nepali, sd: Sindhi, kok: Konkani, doi: Dogri
# mni: Manipuri, sat: Santali, bo: Bodo
SUPPORTED_LANGUAGES=en,hi,bn,te,mr,ta,ur,gu,kn,ml,or,pa,as,mai,sa,ks,ne,sd,kok,doi,mni,sat,bo
